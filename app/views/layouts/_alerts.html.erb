<% if flash[:notice] %>
  <div class="alert alert-dismisable alert-success text-center" role="alert" style="margin-bottom: 0px;">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-dismisable alert-danger text-center" role="alert" style="margin-bottom: 0px;">
    <%= flash[:alert] %>
  </div>
<% end %>
