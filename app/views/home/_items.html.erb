<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-striped table-hover table-custom">
  <tr>
    <th> <%= sortable "name" %></th>
    <th> <%= sortable "regular_price" %></th>
    <th> <%= sortable "sale_price" %></th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td>
        <%= number_to_currency(item.regular_price, unit: "$") %>
      </td>
      <td>
        <%= number_to_currency(item.sale_price, unit: "$") %>
      </td>
    </tr>
  <% end %>
</table>
