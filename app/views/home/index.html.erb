<div class="col-md-6">
  <h3>Items</h3>
  <%= form_tag home_index_path, method: 'get', id: "items-search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<div id="items">
  <%= render 'items' %>
</div>
<%= will_paginate @items %>
</div>
<div class="col-md-6">
  <h3>Purchases</h3>
  <ul class="list-group">
  <% @purchases.each do |purchase| %>
    <%= link_to purchase_path(purchase) do %>
      <li class="list-group-item"><%= purchase.name %></li>
    <% end %>
  <% end %>
  </ul>
</div>
