<div class="col-md-6">
  <h3>Items</h3>
  <ul class="list-group">
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
      <li class="list-group-item"><%= item.name %> - <%= item.regular_price %> - <%= item.sale_price %></li>
    <% end %>
  <% end %>
  </ul>
</div>
<div class="col-md-6">
  <h3>Purchases</h3>
  <ul class="list-group">
  <% @purchases.each do |purchase| %>
    <%= link_to purchase_path(purchase) do %>
      <li class="list-group-item"><%= purchase.name %></li>
    <% end %>
  <% end %>
  </ul>
</div>
