<h1>Purchases</h1>
<% if @purchases.any? %>
  <ul>
    <% @purchases.each do |purchase| %>
      <li><%= link_to purchase.name, purchase_path(purchase) %></li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Add a new Purchase", new_purchase_path, class: "btn btn-block btn-primary", id: "new-purchase-index", remote: true %>
<div id='purchase-form'>

</div>
