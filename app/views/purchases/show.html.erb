<h1> <%= @purchase.name %> </h1>
<h3> <i>Added by: <%= @purchase.user.email %></i></h3>
<ul>
  <% @purchase.items.each do |item| %>
    <li><%= link_to item.name, item_path(item) %></li>
  <% end %>
</ul>

<% if can? :delete, @purchase %>
<div class="col-md-4 col-md-offset-4">
  <div class="btn-group btn-group-justified">
    <%= link_to "Edit", edit_purchase_path(@purchase), class: "btn btn-warning" %>
    <%= link_to "Delete", purchase_path(@purchase), method: :delete, class: "btn btn-danger" %>
  </div>
</div>
<% end %>
