<h1> <%= @item.name %> </h1>
<h3> <i>Added by: <%= @item.user.email %></i></h3>
<ul>
  <li><%= @item.description %></li>
  <li><%= @item.regular_price %></li>
  <li><%= @item.sale_price %></li>
</ul>

<% if can? :delete, @item %>
<div class="col-md-4 col-md-offset-4">
  <div class="btn-group btn-group-justified">
    <!-- <div class="btn-block"> -->
      <%= link_to "Edit", edit_item_path(@item), class: "btn btn-warning" %>
      <%= link_to "Delete", item_path(@item), method: :delete, class: "btn btn-danger" %>
  <!-- </div> -->
  </div>
</div>
<% end %>
